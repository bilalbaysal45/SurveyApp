@model List<IdentityUser>
@{
    ViewData["Title"] = "Index";
}
@if(ViewBag.Error is null)
{
<div class="card bg-warning">
    <div class="card-body">
    <p class="card-text">In top-left, there is a an icon with 3 line. You can click that icon and see the surveys that you didn't participate yet.</p>
    </div>
    <ul class="navbar-nav me-auto mb-2 mb-lg-0 w-100 bg-white">
    @foreach (var user in Model)
    {
            <li class="nav-item d-flex justify-content-between align-items-center">
                <label class="form-label w-25 border">User Name: </label>
                <label class="form-label w-100 border">@user.UserName</label>
                <a class="nav-link active bg-success text-center border w-25" aria-current="page" asp-area="Admin"
                    asp-controller="User" asp-action="User" asp-route-id="@user.Id">Send Survey</a>
            </li>
    }
    </ul>
</div>
}
else
{
    <div class="card bg-warning">
    <div class="card-body">
    <p class="card-text">In top-left, there is a an icon with 3 line. You can click that icon and see the surveys that you didn't participate yet.</p>
    </div>
    <ul class="navbar-nav me-auto mb-2 mb-lg-0 w-100 bg-white">
    @foreach (var user in Model)
    {
            <li class="nav-item d-flex justify-content-between align-items-center">
                <label class="form-label w-25 border">User Name: </label>
                <label class="form-label w-100 border">@user.UserName</label>
                <a class="nav-link active bg-success text-center border w-25" aria-current="page" asp-area="Admin"
                    asp-controller="User" asp-action="User" asp-route-id="@user.Id">Send Survey</a>
            </li>
    }
    </ul>
    <p class="card-text bg-danger">@ViewBag.Error</p>
</div>
}
