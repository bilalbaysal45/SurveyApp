@{
    ViewData["Title"] = "Surveys";
}

<div class="card bg-warning">
    <div class="card-body">
        <p class="card-text">In top-left, there is a an icon with 3 line. You can click that icon and see the surveys
            that you didn't participate yet.</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item"><a asp-area="Admin" asp-controller="Survey" asp-action="Create">Create Survey</a>
        </li>
        <li class="list-group-item"><a asp-area="Admin" asp-controller="Survey" asp-action="Surveys">Update Survey</a>
        </li>
        <li class="list-group-item"><a asp-area="Admin" asp-controller="Survey" asp-action="SurveyResults">Survey Results</a>
        </li>
    </ul>
</div>